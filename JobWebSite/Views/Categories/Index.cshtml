@model IEnumerable<JobWebSite.Models.Category>

@{
    ViewBag.Title = "قائمه انواع الوظائف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>قائمه انواع الوظائف</h2>

<p>
    @Html.ActionLink("أنشاء نوع جديد ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        <td>
            @Html.ActionLink("تعديل ", "Edit", new { id=item.ID }) |
            @Html.ActionLink("تفاصيل ", "Details", new { id=item.ID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
