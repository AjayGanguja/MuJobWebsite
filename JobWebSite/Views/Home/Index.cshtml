@model IEnumerable<JobWebSite.Models.Category>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <h1>مرحبا بك عزيزي الزائر</h1>
    <p class="lead">مرحبا بك في فضاء البحث عن الوظائف باختلاف أصنافها، يمكنك نشر وظيفة إن كنت ناشرا، ويمكنك التقدم للوظيفة إذا كنت باحثا عن شغل</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل  &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>

        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>

            @foreach (var subItem in item.Jobs)
            {
        <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; min-height:380px;">
            <img src="~/Uploads/@subItem.JobImage" />
            <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
            <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.JobContent).ToString()))</h5>
            @Html.ActionLink("التفاصيل", "Details", new { id = subItem.ID } , new { @class="btn btn-primary"})
        </div>
            }
        </div>
    </div>

    <style>
        p{
            color:black;
        }
    </style>
}